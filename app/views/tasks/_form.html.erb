<div class="main-container col-12">
    <%= form_for(@task) do |f| %>
        <div class="row">
            <div class="field d-flex flex-column col-12">
              <%= f.label :title %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
        </div>
        <div class="row">
            <div class="field d-flex flex-column col-12">
              <%= f.label :details %>
              <%= f.text_field :details, class: "form-control" %>
            </div>
        </div>
        <div class="row">
            <div class="field d-flex flex-column col-12 p-3 align-items-center">
              <%= f.check_box :completed, class: "form-control" %>
              <%= f.label :completed, class: "" %>
            </div>
        </div>
        <%= f.submit class: "btn btn-primary col-12 align-self-center" %>
    <% end %>
</div>
